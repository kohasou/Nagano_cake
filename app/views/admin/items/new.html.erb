<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>商品新規登録</strong>
      </h4>
    </div>
  </div>
  <%= form_with model: @item, url: admin_items_path do |f| %>

  <table class="col-5">
    <tbody>
      <tr>
        <td class="col-3">商品画像</td>
        <td class="col-3"><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td class="col-3">商品名</td>
        <td class="col-3"><%= f.text_field :item_name, style: "width:100%" %></td>
      </tr>
      <tr>
        <td class="col-3">商品説明</td>
        <td class="col-3"><%= f.text_area :introduction, style: "width:100%", rows: "5" %></td>
      </tr>
      <tr>
        <td class="col-3">税抜き価格</td>
        <td class="col-3"><%= f.text_field :non_taxed_price, style: "width:100%" %></td>
      </tr>
      <tr>
        <td class="col-3"></td>
        <td class="col-3"><%= f.submit "新規登録", class:"btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>