<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>商品詳細</strong>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <%= image_tag @item.get_image %>
    </div>
  </div>
  <table class="col-5">
    <tbody>
      <tr>
        <td class="col-3">商品名</td>
        <td class="col-5"><%= @item.item_name %></td>
      </tr>
      <tr>
        <td class="col-3">商品説明</td>
        <td class="col-5"><%= @item.introduction %></td>
      </tr>
      <tr>
        <td class="col-3">税抜き価格</td>
        <td class="col-5"><%= @item.non_taxed_price %>円</td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to '編集する', edit_admin_item_path, class:"btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
</div>