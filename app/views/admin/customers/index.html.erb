<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>会員一覧</strong>
      </h4>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th class="col-3">会員ID</th>
        <th class="col-3">氏名</th>
        <th class="col-3">メールアドレス</th>
      </tr>
    </thead>
    <tbody>
<% @customers.each do |customer| %>
      <tr>
        <th class="row"><%= customer.id %></th>
        <td><%= link_to customer.last_name + customer.first_name, admin_customers_show_path(customer.id) %></td>
        <td><%= customer.email %></td>
      </tr>
<% end %>
    </tbody>
  </table>
</div>