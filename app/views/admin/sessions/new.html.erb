<div class="container">
  <div class="col-3">
    <h4>
      <strong>管理者ログイン</strong>
    </h4>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>パスワード</p>
    </div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
  <% if devise_mapping.rememberable? %>
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "ログイン" %>
    </div>
  </div>
<% end %>
</div>

<%= render "admin/shared/links" %>
