<div class="container">
  <div class="row">
    <div class="col-5">
      <h4>
        <strong>注文履歴一覧</strong>
      </h4>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th class="col-2">購入日時</th>
        <th class="col-2">購入者</th>
        <th class="col-2">注文個数</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <% @total_quantity = 0 %>
    <tbody>
      <tr>
        <th class="row"><%= link_to order.created_at, admin_order_detail_path(order) %></th>
        <td><%= order.delivery_name %></td>
        <% order.order_details.each do |order_detail| %>
          <% @total_quantity = @total_quantity + order_detail.item_quantity %>
        <% end %>
        <td><%= @total_quantity %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>