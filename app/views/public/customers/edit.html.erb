<div class="container">
  <div class="col-3">
    <h4>
      <strong>会員情報編集</strong>
    </h4>
  </div>

<%= form_with model: @customer, url: customer_path do |f| %>

  <div class="row">
    <div class="col-3">
      <p>名前</p>
    </div>
    <div class="col-3">
      <p>(姓) <%= f.text_field :last_name %></p>
    </div>
    <div class="col-3">
      <p>(名) <%= f.text_field :first_name %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>フリガナ</p>
    </div>
    <div class="col-3">
      <p>(セイ)<%= f.text_field :last_name_kana %></p>
    </div>
    <div class="col-3">
      <p>(メイ)<%= f.text_field :first_name_kana %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-3">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-3">
      <%= f.text_field :address %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <p>電話番号(ハイフンなし)</p>
    </div>
    <div class="col-3">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  </div>
<% end %>
