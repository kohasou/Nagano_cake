<div class="container">
  <div class="row">
    <div class="col-5">
      <h4>
        <strong>注文履歴一覧</strong>
      </h4>
    </div>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="col-2">注文日</th>
        <th class="col-4">配送先</th>
        <th class="col-2">注文商品</th>
        <th class="col-2">支払い金額</th>
        <th class="col-2">注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          〒<%= order.delivery_postal_code %> <%= order.delivery_address %><br>
          <%= order.delivery_name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.item_name %><br>
          <% end %>
        </td>
        <td><%= order.billing_amount %>円</td>
        <td><%= link_to '表示する', order_path(current_customer), class:"btn btn-primary" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>