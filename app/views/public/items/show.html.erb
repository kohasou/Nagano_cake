<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>
        <strong>商品詳細</strong>
      </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <%= image_tag @item.get_image(200, 200) %>
    </div>
  </div>
  <table class="col-5">
    <tbody>
      <tr>
        <td class="col-3">商品名</td>
        <td class="col-5"><%= @item.item_name %></td>
      </tr>
      <tr>
        <td class="col-3">商品説明</td>
        <td class="col-5"><%= @item.introduction %></td>
      </tr>
      <tr>
        <td class="col-3">税抜き価格</td>
        <td class="col-5"><%= @item.non_taxed_price %>円</td>
      </tr>
    <%= form_with model: @cart_item , url: cart_items_path, method: :post do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <tr>
        <td class="col-3"><%= f.select :quantity, [['1',1], ['2',2], ['3',3]] %></td>
        <td class="col-5"><%= f.submit "カートに入れる", class:"btn btn-success" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>